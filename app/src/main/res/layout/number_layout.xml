<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_margin="2dp"
    android:id="@+id/numberContainer"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ImageView
        android:id="@+id/ivTop"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/horizontal_rectangle"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <ImageView
        android:id="@+id/ivTopStart"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="@id/ivTop"
        app:layout_constraintTop_toTopOf="@id/ivTop"
        android:src="@drawable/vertical_rectangle"
        />

    <ImageView
        android:id="@+id/ivTopEnd"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="@id/ivTop"
        app:layout_constraintTop_toTopOf="@id/ivTop"
        android:src="@drawable/vertical_rectangle"
        />

    <ImageView
        android:id="@+id/ivCenter"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="@id/ivTop"
        app:layout_constraintBottom_toBottomOf="@id/ivTopStart"
        android:src="@drawable/horizontal_rectangle"
        />

    <ImageView
        android:id="@+id/ivBottomStart"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="@id/ivTop"
        app:layout_constraintTop_toTopOf="@id/ivCenter"
        android:src="@drawable/vertical_rectangle"
        />

    <ImageView
        android:id="@+id/ivBottomEnd"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="@id/ivTop"
        app:layout_constraintTop_toTopOf="@id/ivCenter"
        android:src="@drawable/vertical_rectangle"
        />

    <ImageView
        android:id="@+id/ivBottom"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="@id/ivTop"
        app:layout_constraintBottom_toBottomOf="@id/ivBottomStart"
        android:src="@drawable/horizontal_rectangle"
        />

</androidx.constraintlayout.widget.ConstraintLayout>